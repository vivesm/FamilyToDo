# Server Configuration
PORT=4000
NODE_ENV=development

# Database
DATABASE_PATH=./data/familytodo.db

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
MAX_ATTACHMENT_SIZE=10485760
ALLOWED_FILE_TYPES=image/*,application/pdf,doc,docx,txt,csv,xlsx,xls
MAX_ATTACHMENTS_PER_TASK=10

# CORS
CORS_ORIGIN=http://localhost:5173

# Network Access (for iPad/local network)
ALLOWED_HOSTS=localhost,192.168.*,10.*,*.local
MDNS_ENABLED=true
MDNS_NAME=familytodo

# Socket.io
SOCKET_CORS_ORIGIN=http://localhost:5173

# Camera Settings
CAMERA_QUALITY=0.85
CAMERA_MAX_WIDTH=1920
CAMERA_MAX_HEIGHT=1080

# Motion Detection (future feature)
MOTION_DETECTION_ENABLED=false
MOTION_DETECTION_SENSITIVITY=0.3

# Google Calendar (optional - future feature)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:4000/api/calendar/callback

# Tailscale Network (production)
TAILSCALE_NETWORK=100.64.0.0/10