# Production Server Configuration
PORT=4000
NODE_ENV=production

# Database
DATABASE_PATH=./data/familytodo.db

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
MAX_ATTACHMENT_SIZE=10485760

# CORS - Secure origin validation (supports 192.168.* and 100.64.* patterns)
CORS_ORIGIN=http://localhost:4000,http://localhost:5173,http://192.168.*:5173,http://192.168.*:4000,http://100.64.*:5173,http://100.64.*:4000,https://yourdomain.com

# Socket.io CORS - Secure origin validation (supports 192.168.* and 100.64.* patterns)
SOCKET_CORS_ORIGIN=http://localhost:4000,http://localhost:5173,http://192.168.*:5173,http://192.168.*:4000,http://100.64.*:5173,http://100.64.*:4000,https://yourdomain.com

# Motion Detection
MOTION_DETECTION_ENABLED=true
MOTION_DETECTION_SENSITIVITY=0.3

# Google Calendar (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/calendar/callback

# Tailscale Network (production)
TAILSCALE_NETWORK=100.64.0.0/10